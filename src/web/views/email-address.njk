{% extends "templates/form.njk" %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/details/macro.njk" import govukDetails %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "macros/htbhf-form-description.njk" import htbhfFormDescription %}

{% block formContent %}

  {% call govukFieldset({
    legend: {
      text: heading,
      classes: "govuk-fieldset__legend--xl",
      isPageHeading: true
    }
  }) %}

    {{ htbhfFormDescription(formDescription) }}

    {{ govukInput({
      label: {
        text: emailAddressLabel
      },
      id: 'email-address',
      name: 'emailAddress',
      value: claim.emailAddress,
      errorMessage: errors | getErrorForField('emailAddress'),
      type: "email",
      autocomplete: "email",
      attributes: {
        spellcheck: "false"
      }
    }) }}

  {% endcall %}

  {{ govukInsetText({
    text: explanation
  }) }}

{% endblock %}

{% extends "templates/form.njk" %}
{% from "input/macro.njk" import govukInput %}
{% from "table/macro.njk" import govukTable %}

{% set buttonText = "Confirm" %}
{% block formContent %}
  {{ govukTable({
      caption: "Confirm details",
      firstCellIsHeader: true,
      head: [
        {
          text: "Field"
        },
        {
          text: "Value"
        }
      ],
      rows: [
        [
          {
            text: "First name"
          },
          {
            text: claim.firstName
          }
        ],
        [
          {
            text: "Last name"
          },
          {
            text: claim.lastName
          }
        ],
        [
          {
            text: "National Insurance number"
          },
          {
            text: claim.nino
          }
        ]
      ]
  }) }}

  <input type="hidden" name="firstName" value="{{ claim.firstName }}"/>
  <input type="hidden" name="lastName" value="{{ claim.lastName }}"/>
  <input type="hidden" name="nino" value={{ claim.nino }}/>
{% endblock %}



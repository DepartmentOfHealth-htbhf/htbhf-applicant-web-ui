{% extends "templates/form.njk" %}
{% from "radios/macro.njk" import govukRadios %}
{% from "inset-text/macro.njk" import govukInsetText %}

{% block formContent %}
    {{ govukRadios({
        id: "send-code",
        name: "sendCode",
        fieldset: {
            legend: {
                text: heading,
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
            }
        },
        errorMessage: errors | getErrorForField('sendCode'),
        items: [
            {
                value: "text",
                text: text,
                checked : claim.sendCode === "text",
                conditional: {
                html: eddHtml
            }
            },
            {
                value: "email",
                text: email,
                checked : claim.sendCode === "email"
            }
        ],
        hint: {
            text: hint
        }
    }) }}

    {{ govukInsetText({
        text: explanation
    }) }}
{% endblock %}

{#
  htbhfPagination()
  Next and previous pagination links for pages in a sequence

  params:
  next: {
    title: string,
    path: string
  }
  previous: {
    title: string,
    path: string
  }
#}
{% macro htbhfPagination(params) %}
  <div class ="c-htbhf-pagination">
    {% if params.previous %}
      {{ htbhfPaginationLink({
        direction: 'previous',
        directionLabel: 'Previous',
        title: params.previous.title,
        path: params.previous.path
      }) }}
    {% endif %}
    {% if params.next %}
      {{ htbhfPaginationLink({
        direction: 'next',
        directionLabel: 'Next',
        title: params.next.title,
        path: params.next.path
      }) }}
    {% endif %}
  </div>
{% endmacro %}

{#
  htbhfPaginationLink()
  Link for next and previous navigation

  params:
  direction: string (previous | next)
  directionLabel: string
  title: string
  path: string
#}
{% macro htbhfPaginationLink(params) %}
  <a href="{{ params.path }}" class="c-htbhf-pagination__link c-htbhf-pagination__link--{{ params.direction }}">
    <span class="c-htbhf-pagination__link__icon">
      {% include "../partials/icons/arrow-" + params.direction + ".njk" %}
    </span>
    <span class="c-htbhf-pagination__link__direction">{{ params.directionLabel }}</span>
    <span class="c-htbhf-pagination__link__label">{{ params.title }}</span>
  </a>
{% endmacro %}

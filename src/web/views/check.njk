{% extends "templates/form.njk" %}
{% from "input/macro.njk" import govukInput %}
{% from "table/macro.njk" import govukTable %}
{% from "fieldset/macro.njk" import govukFieldset %}

{% set buttonText = "Accept and send application" %}
{% block formContent %}
  {% call govukFieldset({
    legend: {
      text: heading,
      classes: "govuk-fieldset__legend--xl",
      isPageHeading: true
    }
  }) %}

  {% endcall %}
  {{ govukTable({
      firstCellIsHeader: true,
      rows: [
        [
          {
            text: "Name"
          },
          {
            text:  [claim.firstName, claim.lastName] | join(' ')
          }
        ],
        [
          {
            text: "National Insurance number"
          },
          {
            text: claim.nino
          }
        ],
        [
          {
            text: "Date of birth"
          },
          {
            text: [claim['dateOfBirth-day'], claim['dateOfBirth-month'], claim['dateOfBirth-year']] | join(' ')
          }
        ],
        [
          {
            text: "Are you pregnant?"
          },
          {
            text: claim.areYouPregnant
          }
        ],

        [
          {
            text: "Baby's due date"
          },
          {
            text: [claim['expectedDeliveryDate-day'], claim['expectedDeliveryDate-month'], claim['expectedDeliveryDate-year']] | join(' ')
          }
        ],

        [
          {
            text: "Address"
          },
          {
            text: [
              claim.cardDeliveryAddress.addressLine1,
              claim.cardDeliveryAddress.addressLine2,
              claim.cardDeliveryAddress.townOrCity,
              claim.cardDeliveryAddress.postcode
            ] | join('<br/>') | safe
          }
        ]
      ]
  }) }}

  <h2 class="govuk-heading-m">Now send your application</h2>
  <p class="govuk-body">By submitting this notification you are confirming that, to the best of your knowledge, the details you are providing are correct.</p>

{% endblock %}



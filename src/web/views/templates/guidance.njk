{% extends "./page.njk" %}

{% block pageContent %}
  <h1 class="govuk-heading-xl">Get money off milk, food and vitamins (Healthy Start)</h1>

  <p class="govuk-body">Contents</p>

  <ul class="govuk-list">
    {% for page in pages %}
      <li>&#8212; {% if page.path === activePath %} {{ page.title }} {% else %}  <a class="govuk-link" href="{{ page.path }}">{{ page.title }}</a> {% endif %}</li>
    {% endfor %}
  </ul>

  <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">
  {% block guidanceContent %}{% endblock %}
  <hr class="govuk-section-break govuk-section-break--xl govuk-section-break--visible">

  <div class ="c-htbhf-pagination">
    {% if previous %}
      <a href="{{ previous.path }}" class="c-htbhf-pagination__link c-htbhf-pagination__link--previous">
        <span class="c-htbhf-pagination__link__icon">
          <svg xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
            <path fill="currentColor" d="m6.5938-0.0078125-6.7266 6.7266 6.7441 6.4062 1.377-1.449-4.1856-3.9768h12.896v-2h-12.984l4.2931-4.293-1.414-1.414z"></path>
          </svg>
        </span>
        <span class="c-htbhf-pagination__link__direction">Previous</span>
        <span class="c-htbhf-pagination__link__label">{{ next.title }}</span>
      </a>
    {% endif %}
    {% if next %}
      <a href="{{ next.path }}" class="c-htbhf-pagination__link c-htbhf-pagination__link--next">
        <span class="c-htbhf-pagination__link__icon">
          <svg xmlns="http://www.w3.org/2000/svg" height="13" width="17" viewBox="0 0 17 13">
            <path fill="currentColor" d="m10.107-0.0078125-1.4136 1.414 4.2926 4.293h-12.986v2h12.896l-4.1855 3.9766 1.377 1.4492 6.7441-6.4062-6.7246-6.7266z"></path>
          </svg>
        </span>
        <span class="c-htbhf-pagination__link__direction">Next</span>
        <span class="c-htbhf-pagination__link__label">{{ next.title }}</span>
      </a>
    {% endif %}
  </div>

{% endblock %}

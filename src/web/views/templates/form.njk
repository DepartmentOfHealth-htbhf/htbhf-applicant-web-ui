{% extends "./page.njk" %}
{% from "button/macro.njk" import govukButton %}

{% block pageContent %}
  <form method="post">
    {% if errors %}
      {{ govukErrorSummary({
        titleText: errorSummaryText,
        errorList: errors | toErrorList
      }) }}
    {% endif %}

    <input type="hidden" name="_csrf" value="{{ csrfToken }}">
    {% block formContent %}{% endblock %}
    {{ govukButton({
      text: buttonText
    }) }}
  </form>
{% endblock %}

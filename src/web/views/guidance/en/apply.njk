{% extends "../../templates/guidance.njk" %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% block guidanceContent %}
<h2 class="govuk-heading-l">Apply for Healthy Start</h2>

{{ govukWarningText({
    text: "You can only apply if your benefit has been approved.",
    iconFallbackText: "Warning"
}) }}

    <p class="govuk-body">It only takes about 5 minutes to apply.</p>
<p class="govuk-body">Before you apply you’ll need your:</p>
<ul class="govuk-list govuk-list--bullet">
  <li>National Insurance number</li>
  <li>baby’s due date if you’re pregnant</li>
  <li>contact details which should match those registered with the benefits agencies (if you claim benefits)</li>
  <li>mobile telephone number</li>
  <li>email address</li>
</ul>

{{ govukButton({
    text: "Apply now",
    href: "/scotland",
    classes: "govuk-!-margin-bottom-8",
    isStartButton: true
  })
}}

{% endblock %}

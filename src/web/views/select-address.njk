{% extends "templates/form.njk" %}
{% from "fieldset/macro.njk" import govukFieldset %}
{% from "inset-text/macro.njk" import govukInsetText %}
{% from "macros/htbhf-form-description.njk" import htbhfFormDescription %}

{% set buttonText = enterManualAddress if (postcodeLookupResults | length === 0) else continue %}

{% block formContent %}

    {% call govukFieldset({
        legend: {
            text: heading,
            classes: "govuk-fieldset__legend--xl",
            isPageHeading: true
        }
    }) %}

        {{ htbhfFormDescription(formDescription) }}

        <h2 class="govuk-heading-m">{{ postcodeLabel }}</h2>
        <span class="govuk-body">
            <strong class="govuk-!-margin-right-4">{{ claim.postcode | upper }}</strong>
            <a class="govuk-link" href="/postcode">{{ change }}</a>
        </span>

        {%  if postcodeLookupResults | length === 0 %}
            <h2 class="govuk-heading-m">{{ addressNotFound }}</h2>
        {% endif %}

    {% endcall %}

    {{ govukInsetText({
        text: explanation
    }) }}

{% endblock %}

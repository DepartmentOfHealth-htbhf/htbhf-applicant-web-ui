{
  "name": "htbhf-applicant-web-ui",
  "version_notice": "Patch versions are incremented by Travis (in tag_version.sh via .travis.yml) - never manually increment the patch version",
  "version": "0.1.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "10.10.x"
  },
  "scripts": {
    "start": "node src/web",
    "start:dev": "npm run build && nodemon src/web",
    "test": "npm-run-all build test:lint test:unit -p -r start test:concurrent",
    "test:lint": "standard --env mocha",
    "test:unit": "nyc tape -r './src/test/unit/setup' 'src/web/**/*.test.js'",
    "test:acceptance": "mocha 'src/test/acceptance/**/*.js'",
    "test:smoke": "mocha 'src/test/smoke/test-suite.js'",
    "test:a11y": "node 'src/test/a11y/test-suite.js'",
    "test:concurrent": "npm-run-all -s test:a11y test:acceptance",
    "coverage": "nyc report --reporter=lcov --reporter=text-lcov > coverage.lcov && codecov",
    "build": "npm run build:sass",
    "build:sass": "node-sass node_modules/govuk-frontend/all.scss src/web/assets/styles/all.css",
    "postinstall": "npm run build"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "chromedriver": "^2.45.0",
    "codecov": "^3.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.1.0",
    "proxyquire": "^2.1.0",
    "selenium-webdriver": "^4.0.0-alpha.1",
    "sinon": "^7.2.2",
    "standard": "^12.0.1",
    "tape": "^4.9.2",
    "tap-spec": "^5.0.0",
    "pa11y": "^5.1.0"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "^1.7.3",
    "connect-redis": "^3.4.0",
    "csurf": "^1.9.0",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "govuk-frontend": "^2.4.1",
    "http-status-codes": "^1.3.0",
    "node-sass": "^4.11.0",
    "nunjucks": "^3.1.6",
    "ramda": "^0.26.1",
    "redis": "^2.8.0",
    "request": "^2.88.0",
    "request-promise": "^4.2.2"
  }
}
